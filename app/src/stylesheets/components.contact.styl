.c-contact
    section
        margin-bottom 3em

        @media (min-width: fromMedium)
            float left
            margin-bottom 0
            width 50%

    @media (min-width: fromMedium)
        hr
            display none

    label
    input
    textarea
        display block

    input
    textarea
        font-family sans-serif
        transition box-shadow 300ms ease-in-out

    label
        font-size 3rem
        font-style italic
        font-weight 700
        width 100%

    input[type="text"]
    input[type="email"]
    textarea
        box-shadow 0px 0px 10px rgba(50,50,50,0.5)
        border 1px solid #ddd
        font-size 2.5rem
        margin 0.5rem 0 2rem
        outline none
        padding 3px
        width 100%

        &:focus
            box-shadow 0px 0px 16px rgba(50,50,50,0.80)

    input.valid
    textarea.valid
        background url('data:image/png;base64,') no-repeat 98% center #fff
        border-color #28921f

    input.invalid
    textarea.invalid
        background url('data:image/png;base64,') no-repeat 98% center #fff
        border-color #b03535

    input:required:valid
    textarea:required:valid
    input.valid
    textarea.valid
        background url('data:image/png;base64,') no-repeat 98% center #fff
        border-color #28921f
        box-shadow 0 0 16px rgba(92,208,83,0.8)

    input:focus:invalid
    textarea:focus:invalid
    input.invalid
    textarea.invalid
        background url('data:image/png;base64,') no-repeat 98% center #fff
        border-color #b03535
        box-shadow 0 0 16px rgba(212,82,82,0.80)

    button[type="submit"]
        background-color rgba(30,196,166,0.60)
        border 1px solid #777
        font-size 2.5rem
        font-style italic
        font-weight 700
        margin 0.5rem 0 2rem
        outline none
        padding 3px
        width 7em

        &:hover
            background-color rgba(30,196,166,1)

    textarea
        height 9em
        resize none

.overlay
    background url('/images/loader.gif') no-repeat 50% 50% #000
    display none
    height 100%
    left 0
    opacity 0.5
    position fixed
    top 0
    width 100%
    z-index 10
