.c-social_list
    @media (min-width: fromMedium)
        padding-left 4rem

.c-social_item
    margin-bottom 1rem

    @media (min-width: fromLarge)
        margin-bottom 4.5rem

        &:last-child
            margin-bottom 0

.c-social_link
.c-social_icon
    transition opacity 200ms ease-in-out

.c-social_link
    display block
    font-style italic
    font-weight 700
    text-decoration none
    vertical-align middle

    @media (max-width: toLarge)
        color #fff
        padding 1rem 0 1rem 1rem

    @media (min-width: fromLarge)
        background none !important
        color baseFontColor

    &:hover
        text-decoration underline

    &:hover
    &:hover c-social_icon
        opacity 0.8

    &.-github
        &
        .c-social_icon
            background-color black

        .c-social_icon:before
            content "g"

    &.-facebook
        &
        .c-social_icon
            background-color #3b5998

        .c-social_icon:before
            content "f"

    &.-twitter
        &
        .c-social_icon
            background-color #00c0f7

        .c-social_icon:before
            content "t"

    &.-linkedin
        &
        .c-social_icon
            background-color #0073b2

        .c-social_icon:before
            content "in"

    &.-lastfm
        &
        .c-social_icon
            background-color #e21303

        .c-social_icon:before
            content "as"

    &.-googlemaps
        &
        .c-social_icon
            background-color #1b8283

        .c-social_icon:before
            content url('data:image/png;base64,')

.c-social_icon
    border-right 1px solid white
    color white
    display none
    height 80px
    line-height 1
    margin-right 2.4rem
    position relative
    width 80px
    vertical-align middle

    @media (min-width: fromLarge)
        border-right none
        display inline-block

    &:before
        left 50%
        position absolute
        top 50%
        transform translate(-50%, -50%)
