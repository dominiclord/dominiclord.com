
// General/content styles
// ======================================================
html
    background url('data:image/png;base64,')
    box-sizing border-box
    color baseFontColor
    font-size fontSize
    font-family fontFamily
    line-height 1.2

body
    font-size 2rem

    @media (min-width: fromMedium)
        font-size 2.4rem

*
*:before
*:after
    box-sizing inherit

::selection
    background #b3d4fc
    text-shadow none


// Resets
// ========================================================
hr
    border 0;
    border-top 1px solid primaryColor;
    display block
    height 1px
    margin 40px 0
    padding 0

img
svg
    border none
    max-width 100%
    vertical-align middle

fieldset
    border 0
    margin 0
    padding 0

textarea
    resize vertical

button
    background-color none
    border none
    outline none

a
button
    transition background-color 200ms ease-in-out

h2
h3
    font-style italic
    font-weight 700
    line-height 1

h2
    font-size 3.8rem

    @media (min-width: fromMedium)
        font-size 4rem

h3
    font-size 2.5rem

    @media (min-width: fromMedium)
        font-size 3rem

ul
    list-reset()
