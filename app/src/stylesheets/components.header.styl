
// Main header
// ======================================================
.c-header
.c-header_heading
    @media (min-width: fromMedium)
        background-color rgba(primaryColor, 0.3)

.c-header
    background-color rgba(primaryColor, 0.45)
    position relative

.c-header_heading
    cursor default
    font-style italic
    line-height 1
    margin 0
    padding 28px 20px
    padding 2.8rem 2rem
    text-align center
    text-transform lowercase

    @media (min-width: fromMedium)
        display inline-block
        text-align left

    span
        display block

.c-header_name
    font-size 4.8rem
    font-weight 900
    line-height 1

    @media (min-width: fromMedium)
        font-size 8rem

.c-header_occupation
    font-size 2.2rem
    font-weight 300

    @media (min-width: fromMedium)
        font-size 3.6rem